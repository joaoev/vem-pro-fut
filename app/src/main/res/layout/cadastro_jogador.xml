<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CadastroJogador">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewCadastroJogador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cadastro jogador"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCadastroJogadorNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome completo" />

        <EditText
            android:id="@+id/editTextCadastroJogadorNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite seu nome completo"
            android:inputType="text" />

        <TextView
            android:id="@+id/textViewCadastroJogadorNick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nickname" />

        <EditText
            android:id="@+id/editTextCadastroJogadorNick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite seu nickname"
            android:inputType="text" />

        <TextView
            android:id="@+id/textViewCadastroJogadorEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail" />

        <EditText
            android:id="@+id/editTextCadastroJogadorEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite seu e-mail"
            android:inputType="text" />

        <TextView
            android:id="@+id/textViewCadastroJogadorSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senha" />

        <EditText
            android:id="@+id/editTextCadastroJogadorSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Crie uma senha"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cidade" />

        <EditText
            android:id="@+id/editTextCadastroJogadorCidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite o nome da sua cidade"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado" />

        <EditText
            android:id="@+id/editTextCadastroJogadorEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Exemplo: CE"
            android:inputType="text" />

        <Button
            android:id="@+id/buttonCadastroJogador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Criar conta" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>