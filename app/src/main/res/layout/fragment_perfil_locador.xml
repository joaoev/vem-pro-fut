<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilLocadorFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginBottom="8dp"
            android:text="Suas Informações" />

        <TextView
            android:id="@+id/textViewPerfilNomeLocador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seu Nome" />

        <TextView
            android:id="@+id/textViewPerfilEmailLocador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example@gmail.com" />

        <TextView
            android:id="@+id/textViewPerfilCidadeLocador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cidade" />

        <TextView
            android:id="@+id/textViewPerfilEstadoLocador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado" />

        <TextView
            android:id="@+id/textViewPerfilCNPJCPFLocador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CPF/CNPJ" />

        <TextView
            android:id="@+id/textViewPerfilTelefoneLocador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefone" />

        <TextView
            android:id="@+id/textViewPerfilNomeLocalLocador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do local" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonPerfilEditarLocador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar informações" />

            <Button
                android:id="@+id/buttonPerfilExcluirLocador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Excluir sua conta" />

            <Button
                android:id="@+id/buttonPerfilSairLocador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sair" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>