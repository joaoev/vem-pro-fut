<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Perfil">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginBottom="8dp"
            android:text="Suas Informações" />

        <TextView
            android:id="@+id/textViewPerfilNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seu Nome" />

        <TextView
            android:id="@+id/textViewPerfilNick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seu Nick" />

        <TextView
            android:id="@+id/textViewPerfilEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example@gmail.com" />

        <TextView
            android:id="@+id/textViewPerfilCidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cidade" />

        <TextView
            android:id="@+id/textViewPerfilEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonPerfilEditar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar informações" />

            <Button
                android:id="@+id/buttonPerfilExcluir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Excluir Conta" />


            <Button
                android:id="@+id/buttonPerfilSair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sair" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>